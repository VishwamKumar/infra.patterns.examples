{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "CacheSettings": {
    "Provider": "Redis", // Options: Redis, InMemory    
    "DefaultPolicy": {
      "Expiration": "00:30:00", // Absolute expiration
      "SlidingExpiration": "00:15:00" // Sliding expiration (optional)      
    },
    "Providers": {
      "Redis": {
        "ConnectionString": "localhost:6379,password=foobared,ssl=False,defaultDatabase=0",
        "InstanceName": "VishwamCache"
      }
    }
  },

  "FeatureFlags": {
    "UseCaching": true // true = use caching, false = disable caching
  }
}
