{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "LoggerSettings": {
    "Provider": "Serilog",
    "Providers": {
      "Serilog": {
        "MinimumLevel": "Information",
        "LogCategories": [
          {
            "Name": "Application",
            "Sinks": [
              {
                "Type": "MongoDB",
                "Enabled": true,
                "ConnectionString": "mongodb://localhost:27017/TestLog",
                "Collection": "AppLogs"
              },
              {
                "Type": "Console",
                "Enabled": true
              },
              {
                "Type": "File",
                "Enabled": false,
                "Path": "logs/application.log"
              }
            ]
          },
          {
            "Name": "Transaction",
            "Sinks": [
              {
                "Type": "MongoDB",
                "Enabled": true,
                "ConnectionString": "mongodb://localhost:27017/TestLog",
                "Collection": "TranLogs"
              },
              {
                "Type": "File",
                "Enabled": false,
                "Path": "logs/transaction.log"
              },
              {
                "Type": "Console",
                "Enabled": false
              }
            ]
          },
          {
            "Name": "Custom",
            "Sinks": [
              {
                "Type": "File",
                "Enabled": false,
                "Path": "logs/custom.log"
              },
              {
                "Type": "Console",
                "Enabled": true
              }
            ]
          }
        ]
      }
    }
  },


  "FeatureFlags": {
    "UseLogger": true //Optional, by defaut true, but you can disable Serilog globally
  }

}
