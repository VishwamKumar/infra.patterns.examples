@page "/counter"
@rendermode InteractiveServer
@inject ILogTypeLogger<Counter> logger

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;    

    private void IncrementCount()
    {
        logger.Info(LogType.Application, "Increasing Counter: {counter}", currentCount);
        //Log.Logger.ForContext("LogType", "Application").Information("Increasing Counter: {counter}", currentCount);
        currentCount++;
    }
}
