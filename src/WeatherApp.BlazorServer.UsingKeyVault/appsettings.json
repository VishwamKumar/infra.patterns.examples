{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "KeyVaultSettings": {
    "Provider": "Azure", //  Azure for now, later - AWS | GCP | HashiCorp etc.    
    "CacheExpiryMinutes": 30, // Duration for which the secrets will be cached in memory,  
    "UseSlidingExpiration": true, // Set to true if you want to use sliding expiration for cached secrets"

    "Providers": {
      "Azure": {
        "KeyVaultUrl": "https://lms-mod-poc-kv.vault.azure.net/", // Replace with your Key Vault URL 
        "TenantId": "23be2acf-a6df-43e5-a809-bf0eb932f38b", // Replace with your Azure AD Tenant ID
        "ClientId": "820c03bb-cbb2-439b-83e4-04849e513bee", //  Replace with your Azure AD Client ID
        "ClientSecret": "ENV:SLC_AZURE_CLIENT_SECRET" //Replace with your Environment Variable for Client Secret, if env variable set it will Entra ID authentication
      }
    }
  },

  "CacheSettings": { // Optional caching settings if UseCaching is true
    "Provider": "Redis", // Options: Redis, InMemory    
    "DefaultPolicy": {
      "Expiration": "00:30:00", // Absolute expiration
      "SlidingExpiration": "00:15:00" // Sliding expiration (optional)      
    },
    "Providers": {
      "Redis": {
        //"ConnectionString": "localhost:6379,password=foobared,ssl=False,defaultDatabase=0",
        "ConnectionString": "ENV:LPS_REDIS_CONNECTION_STRING",
        "InstanceName": "VishwamCache"
      }
    }
  },

  "FeatureFlags": { //Optional feature flags, speically for turning off
    "UseKeyVault": true, //default is true, set to false to disable Azure Key Vault integration
    "UseCaching": false // true = Redis, false = InMemory
  } 
}
